      {{> drawer-close}}
    {{/unless}}
  {{/drawer-actions}}
  {{#> title titleType="h2" title--modifier="pf-m-lg" title--attribute=(concat 'id="' master-detail-template--id '-drawer-label"')}}
    {{{master-detail-panel-header--title}}}
  {{/title}}
{{/drawer-head}}
