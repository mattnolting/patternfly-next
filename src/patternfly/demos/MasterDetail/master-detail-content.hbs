{{#if master-detail-content--IsTabbed}}
  {{#> drawer-panel-body}}
    {{#> master-detail-content--header}}{{/master-detail-content--header}}
  {{/drawer-panel-body}}
  {{#> drawer-panel-body drawer-panel-body--modifier="pf-m-no-padding"}}
    {{#> tabs tabs--id=(concat master-detail-template--id '-tabs') tabs--modifier="pf-m-fill"}}
      {{#> tabs-scroll-button tabs-scroll-button--IsLeft="true"}}
      {{/tabs-scroll-button}}
      {{#> tabs-list}}
        {{#> tabs-item tabs-item--current="true"}}
          {{#> tabs-button tabs-button--attribute=(concat 'id="' tabs--id '-tab1"')}}
            Overview
          {{/tabs-button}}
        {{/tabs-item}}
        {{#> tabs-item}}
          {{#> tabs-button tabs-button--attribute=(concat 'id="' tabs--id '-tab2"')}}
            Activity
          {{/tabs-button}}
        {{/tabs-item}}
      {{/tabs-list}}
      {{#> tabs-scroll-button tabs-scroll-button--IsRight="true"}}
      {{/tabs-scroll-button}}
    {{/tabs}}
  {{/drawer-panel-body}}
  {{#> drawer-panel-body}}
    {{#> tab-content tab-content--IsActive="true" tab-content--attribute=(concat 'id="' master-detail-template--id '-tab1-panel"')}}
      {{> master-detail-content-body}}
    {{/tab-content}}
    {{#> tab-content tab-content--attribute=(concat 'id="' master-detail-template--id '-tab2-panel"')}}
      Panel 2
    {{/tab-content}}
  {{/drawer-panel-body}}
{{else}}

  {{#> drawer-panel-body}}
    {{> master-detail-panel-body-header}}
    {{> master-detail-panel-body-content}}
  {{/drawer-panel-body}}
{{/if}}
