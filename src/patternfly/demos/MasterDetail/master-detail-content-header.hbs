{{#> l-flex l-flex--modifier="pf-m-column"}}
  {{#if drawer--IsStatic}}
    {{#> l-flex-item}}
      {{#> title titleType="h2" title--modifier="pf-m-lg" title--attribute=(concat 'id="' master-detail-template--id '-drawer-label"')}}
        {{{master-detail-content-header--title}}}
      {{/title}}
    {{/l-flex-item}}
  {{else}}
    {{#> l-flex l-flex--modifier=''}}
      {{#> l-flex-item l-flex-item--modifier="pf-m-flex-1"}}
        {{#> title titleType="h2" title--modifier="pf-m-lg" title--attribute=(concat 'id="' master-detail-template--id '-drawer-label"')}}
          {{{master-detail-content-header--title}}}
        {{/title}}
      {{/l-flex-item}}
      {{#unless drawer--IsStatic}}
        {{#> l-flex-item}}
          {{#> button button--modifier="pf-m-plain" button--attribute='aria-label="Close drawer panel"'}}
            <i class="fas fa-times" aria-hidden="true"></i>
          {{/button}}
        {{/l-flex-item}}
      {{/unless}}
    {{/l-flex}}
  {{/if}}
  {{#if master-detail-content-header--sub-title}}
    {{#> l-flex-item}}
      {{{master-detail-content-header--sub-title}}}
    {{/l-flex-item}}
  {{/if}}
{{/l-flex}}
