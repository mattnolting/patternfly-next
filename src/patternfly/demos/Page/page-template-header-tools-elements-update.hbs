{{#> page-header-tools}}
  {{#> overflow-menu overflow-menu--id="overflow-menu-persistent-hidden"}}
    {{#> overflow-menu-content}}
      {{#> overflow-menu-group overflow-menu-group--modifier="pf-m-icon-button-group"}}
        {{#> overflow-menu-item}}
          {{#> button button--modifier="pf-m-plain" button--attribute='aria-label="Unread notifications"'}}
            {{#> notification-badge notification-badge--modifier="pf-m-unread"}}
              <i class="fas fa-bell" aria-hidden="true"></i>
            {{/notification-badge}}
          {{/button}}
        {{/overflow-menu-item}}
        {{#unless page-template-header-tools-elements-update--IsMobile}}
          {{#> overflow-menu-item}}
            {{#> button button--modifier="pf-m-plain" button--attribute='aria-label="Align left"'}}
              <i class="fas fa-th" aria-hidden="true"></i>
            {{/button}}
          {{/overflow-menu-item}}
          {{#> overflow-menu-item}}
            {{#> button button--modifier="pf-m-plain" button--attribute='aria-label="Help"'}}
              <i class="fas fa-question-circle" aria-hidden="true"></i>
            {{/button}}
          {{/overflow-menu-item}}
          {{#> overflow-menu-item}}
            {{#> button button--modifier="pf-m-plain" button--attribute='aria-label="Settings"'}}
              <i class="fas fa-cog" aria-hidden="true"></i>
            {{/button}}
          {{/overflow-menu-item}}
        {{/unless}}
      {{/overflow-menu-group}}
    {{/overflow-menu-content}}
    {{#if page-template-header-tools-elements-update--IsMobile}}
      {{#> overflow-menu-control dropdown-menu--modifier="pf-m-align-right" overflow-menu-button--aria-label="Dropdown for persistent example"}}
        {{#> overflow-menu-dropdown-item}}
          Settings
        {{/overflow-menu-dropdown-item}}
        {{#> overflow-menu-dropdown-item}}
          Help
        {{/overflow-menu-dropdown-item}}
        {{#> overflow-menu-dropdown-item}}
          Application launcher
        {{/overflow-menu-dropdown-item}}
      {{/overflow-menu-control}}
    {{/if}}
  {{/overflow-menu}}
  {{#> page-header-tools-group}}
    {{#> dropdown id=(concat page--id '-dropdown-kebab-right-aligned-1') dropdown--IsActionMenu="true" dropdown-menu--modifier="pf-m-align-right" dropdown-toggle--modifier="pf-m-mobile pf-m-plain" dropdown--HasKebabIcon="true" aria-label="Actions"}}
    {{/dropdown}}
    <div class="pf-m-user">
      {{#> dropdown id=(concat page--id '-dropdown') dropdown-toggle--modifier="pf-m-plain" dropdown--HasToggleIcon="true"}}
        {{#> dropdown-toggle-text}}
          John Smith
        {{/dropdown-toggle-text}}
      {{/dropdown}}
    </div>
  {{/page-header-tools-group}}
  {{#> avatar avatar--attribute='src="/assets/images/img_avatar.svg" alt="Avatar image"'}}{{/avatar}}
{{/page-header-tools}}
