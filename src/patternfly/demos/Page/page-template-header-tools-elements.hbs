{{#> page-header-tools}}
  {{#> page-header-tools-group page-header-tools-group--modifier="pf-m-icons"}}
    {{#> button button--modifier="pf-m-plain" button--attribute='aria-label="Unread notifications"'}}
        {{#> notification-badge notification-badge--modifier="pf-m-unread"}}
          <i class="fas fa-bell" aria-hidden="true"></i>
        {{/notification-badge}}
    {{/button}}
    {{#> button button--modifier="pf-m-plain" button--attribute='aria-label="Settings"'}}
        <i class="fas fa-cog" aria-hidden="true"></i>
    {{/button}}
  {{/page-header-tools-group}}
  {{#> page-header-tools-group page-header-tools-group--modifier="pf-m-user-dropdown"}}
    {{#> dropdown
      id=(concat page--id '-dropdown')
      dropdown--IsMenuToggleImageInfo="true"
      dropdown-menu--modifier="pf-m-align-right"
      dropdown-menu--dt-modifier="pf-c-page__header-label"
      dropdown-menu--dd-modifier="pf-c-page__header-text"
      }}
      {{#> dropdown-toggle-image}}
        {{> avatar avatar--attribute='src="/assets/images/img_avatar.svg" alt="Avatar image"'}}
      {{/dropdown-toggle-image}}
      {{#> dropdown-toggle-text}}
        Ned Username
      {{/dropdown-toggle-text}}
      {{> dropdown-toggle-icon}}
    {{/dropdown}}
  {{/page-header-tools-group}}
{{/page-header-tools}}
