{{#> tabs-item}}
  {{#> tabs-button tabs-button--attribute=(concat 'id="' tabs--id '-' tabs-item-content--id '-button"')}}
    {{#if tabs-list-content--HasIcons}}
      {{#if tabs-item-content--NoText}}
        {{> tabs-item-icon
          tabs-item-icon--name=tabs-item-content--icon-name
          tabs-item-icon--attribute='aria-label="{{tabs-item-content--aria-label}}"'
          }}
      {{else}}
        {{> tabs-item-icon
          tabs-item-icon--name=tabs-item-content--icon-name
          tabs-item-icon--attribute='aria-hidden="true"'
          }}
      {{/if}}
    {{/if}}
    {{#unless tabs-list-content--NoText}}
      {{#> tabs-item-text}}
        {{{tabs-item-content--text}}}
      {{/tabs-item-text}}
    {{/unless}}
  {{/tabs-button}}
{{/tabs-item}}
