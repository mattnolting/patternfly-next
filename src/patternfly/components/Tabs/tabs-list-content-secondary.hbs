{{!--
------------------------------------
Table list content options
------------------------------------
tabs-list-content-secondary--HasIcons: bool
tabs-list-content-secondary--NoText: bool
tabs-list-content-secondary--IsScrollable: bool
tabs-list-content-secondary--IsShort: bool
tabs-list-content-secondary--IsLong: bool
------------------------------------
--}}

{{#unless tabs-list-content--NoScrollButtons}}
  {{> tabs-scroll-button tabs-scroll-button--IsLeft="true"}}
{{/unless}}

{{#> tabs-list}}
  {{> tabs-item-content
    tabs-item-content--id="sub-1"
    tabs-item-content--icon-name="address-card"
    tabs-item-content--aria-label="Item 1"
    tabs-item-content--text="Item 1"
    }}
  {{> tabs-item-content
    tabs-item--IsCurrent="true"
    tabs-item-content--id="sub-2"
    tabs-item-content--icon-name="anchor"
    tabs-item-content--aria-label="Item 2"
    tabs-item-content--text="Item 2"
    }}
  {{> tabs-item-content
    tabs-item-content--id="sub-3"
    tabs-item-content--icon-name="arrow-alt-circle-right"
    tabs-item-content--aria-label="Item 3"
    tabs-item-content--text="Item 3"
    }}

  {{#unless tabs-list-content-secondary--IsShort}}
    {{> tabs-item-content
      tabs-item-content--id="sub-4"
      tabs-item-content--icon-name="balance-scale"
      tabs-item-content--aria-label="Item 4"
      tabs-item-content--text="Item 4"
      }}
    {{> tabs-item-content
      tabs-item-content--id="sub-5"
      tabs-item-content--icon-name="bell"
      tabs-item-content--aria-label="Item 5"
      tabs-item-content--text="Item 5"
      }}
    {{> tabs-item-content
      tabs-item-content--id="sub-6"
      tabs-item-content--icon-name="book"
      tabs-item-content--aria-label="Item 6"
      tabs-item-content--text="Item 6"
      }}

    {{#if tabs-list-content-secondary--IsLong}}
      {{> tabs-item-content
        tabs-item-content--id="sub-7"
        tabs-item-content--icon-name="chart-pie"
        tabs-item-content--aria-label="Item 7"
        tabs-item-content--text="Item 7"
        }}
      {{> tabs-item-content
        tabs-item-content--id="sub-8"
        tabs-item-content--icon-name="coffee"
        tabs-item-content--aria-label="Item 8"
        tabs-item-content--text="Item 8"
        }}
      {{> tabs-item-content
        tabs-item-content--id="sub-9"
        tabs-item-content--icon-name="dot-circle"
        tabs-item-content--aria-label="Item 9"
        tabs-item-content--text="Item 9"
        }}
    {{/if}}
  {{/unless}}
{{/tabs-list}}

{{#unless tabs-list-content--NoScrollButtons}}
  {{> tabs-scroll-button tabs-scroll-button--IsRight="true"}}
{{/unless}}
