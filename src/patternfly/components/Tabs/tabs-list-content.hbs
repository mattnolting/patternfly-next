{{!--
------------------------------------
Table list content options
------------------------------------
tabs-list-content--HasIcons: bool
tabs-item-content--NoText: bool
tabs-list-content--IsScrollable: bool
tabs-list-content--IsShort: bool
tabs-list-content--IsLong: bool
------------------------------------
--}}

{{#unless tabs-list-content--NoScrollButtons}}
  {{#if tabs-list-content--DisabledFirstScrollButton}}
    {{> tabs-scroll-button tabs-scroll-button--IsLeft="true" tabs-scroll-button--IsDisabled="true"}}
  {{else}}
    {{> tabs-scroll-button tabs-scroll-button--IsLeft="true"}}
  {{/if}}
{{/unless}}

{{#> tabs-list}}
  {{> tabs-item-content
    tabs-item-content--id="users"
    tabs-item-content--icon-name="fas fa-users"
    tabs-item-content--aria-label="Users"
    tabs-item-content--text="Users"
    }}
  {{> tabs-item-content
    tabs-item--IsCurrent="true"
    tabs-item-content--id="containers"
    tabs-item-content--icon-name="fas fa-box"
    tabs-item-content--aria-label="Containers"
    tabs-item-content--text="Containers"
    }}
  {{> tabs-item-content
    tabs-item-content--id="database"
    tabs-item-content--icon-name="database"
    tabs-item-content--aria-label="Database"
    tabs-item-content--text="Database"
    }}

  {{#unless tabs-list-content--IsShort}}
    {{> tabs-item-content
      tabs-item-content--id="server"
      tabs-item-content--icon-name="server"
      tabs-item-content--aria-label="Server"
      tabs-item-content--text="Server"
      }}
    {{> tabs-item-content
      tabs-item-content--id="system"
      tabs-item-content--icon-name="laptop"
      tabs-item-content--aria-label="System"
      tabs-item-content--text="System"
      }}
    {{> tabs-item-content
      tabs-item-content--id="network-wired"
      tabs-item-content--icon-name="project-diagram"
      tabs-item-content--aria-label="Network"
      tabs-item-content--text="Network"
      }}

    {{#if tabs-list-content--IsLong}}
      {{> tabs-item-content
        tabs-item-content--id="cloud"
        tabs-item-content--icon-name="cloud"
        tabs-item-content--aria-label="Hybrid Cloud"
        tabs-item-content--text="Hybrid Cloud"
        }}
      {{> tabs-item-content
        tabs-item-content--id="automation"
        tabs-item-content--icon-name="magic"
        tabs-item-content--aria-label="Automation"
        tabs-item-content--text="Automation"
        }}
      {{> tabs-item-content
        tabs-item-content--id="files"
        tabs-item-content--icon-name="file"
        tabs-item-content--aria-label="files"
        tabs-item-content--text="Files"
        }}
    {{/if}}
  {{/unless}}
{{/tabs-list}}

{{#unless tabs-list-content--NoScrollButtons}}
  {{> tabs-scroll-button tabs-scroll-button--IsRight="true"}}
{{/unless}}