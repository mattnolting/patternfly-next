<div class="pf-c-dropdown__menu{{#if dropdown-menu--modifier}} {{dropdown-menu--modifier}}{{/if}}"
  aria-labelledby="{{id}}-button"
  {{#unless dropdown--IsExpanded}}hidden{{/unless}}
  {{#if dropdown-menu--attribute}}
    {{{dropdown-menu--attribute}}}
  {{/if}}>

  {{#> dropdown-group}}
    <dl>
      {{#> dropdown-menu-item dropdown-menu-item--attribute=(concat 'aria-hidden="true" id="' id '-username"') dropdown-menu-item--type="div" dropdown-menu-item--modifier="pf-m-text"}}
        <dt class="pf-c-page__header-label">Username:</dt>
        <dd class="pf-c-page__header-text">mshaksho@redhat.com</dd>
      {{/dropdown-menu-item}}
      {{#> dropdown-menu-item dropdown-menu-item--attribute=(concat 'aria-hidden="true" id="' id '-account"') dropdown-menu-item--type="div" dropdown-menu-item--modifier="pf-m-text"}}
        <dt class="pf-c-page__header-label">Account number:</dt>
        <dd class="pf-c-page__header-text">123456789</dd>
      {{/dropdown-menu-item}}
    </dl>
  {{/dropdown-group}}
  {{#> dropdown-separator dropdown-separator--IsHr="true"}}{{/dropdown-separator}}
  {{#> dropdown-group}}
    <ul aria-describedby="{{id}}-username {{id}}-account">
      <li>
        {{#> dropdown-menu-item dropdown-menu-item--type="a" dropdown-menu-item--attribute='href="#"'}}
          My profile
        {{/dropdown-menu-item}}
      </li>
      <li>
        {{#> dropdown-menu-item dropdown-menu-item--type="a" dropdown-menu-item--attribute='href="#"'}}
          User management
        {{/dropdown-menu-item}}
      </li>
      <li>
        {{#> dropdown-menu-item dropdown-menu-item--type="a" dropdown-menu-item--attribute='href="#"'}}
          Logout
        {{/dropdown-menu-item}}
      </li>
    </ul>
  {{/dropdown-group}}
</div>
