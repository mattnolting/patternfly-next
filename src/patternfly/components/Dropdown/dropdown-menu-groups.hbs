<div class="pf-c-dropdown__menu{{#if dropdown-menu--modifier}} {{dropdown-menu--modifier}}{{/if}}"
  aria-labelledby="{{id}}-button"
  {{#unless dropdown--IsExpanded}}hidden{{/unless}}
  role="list"
  {{#if dropdown-menu--attribute}}
	  {{{dropdown-menu--attribute}}}
  {{/if}}>
  <section class="pf-c-dropdown__group" role="listitem">
    <ul aria-label="Group 1">
      <li>{{#> dropdown-menu-item dropdown-menu-item--attribute='href="#"'}}Link{{/dropdown-menu-item}}</li>
      <li>{{#> dropdown-menu-item}}Action{{/dropdown-menu-item}}</li>
      {{#if dropdown--HasSeparatorsItems}}
        {{#> dropdown-separator}}{{/dropdown-separator}}
      {{/if}}
    </ul>
  </section>
  {{#if dropdown--HasSeparatorsGroups}}
    {{#> dropdown-separator dropdown-separator--IsHr="true"}}{{/dropdown-separator}}
  {{/if}}
  <section class="pf-c-dropdown__group" role="listitem">
    <h2 class="pf-c-dropdown__group-title" id="{{id}}-group-2-title" aria-hidden="true">Group 2</h2>
    <ul aria-labelledby="{{id}}-group-2-title">
      <li>{{#> dropdown-menu-item dropdown-menu-item--attribute='href="#"'}}Group 2 link{{/dropdown-menu-item}}</li>
      <li>{{#> dropdown-menu-item}}Group 2 action{{/dropdown-menu-item}}</li>
      {{#if dropdown--HasSeparatorsItems}}
        {{#> dropdown-separator}}{{/dropdown-separator}}
      {{/if}}
    </ul    </ul>
  </section>
  {{#if dropdown--HasSeparatorsGroups}}
    {{#> dropdown-separator dropdown-separator--IsHr="true"}}{{/dropdown-separator}}
  {{/if}}
  <section class="pf-c-dropdown__group" role="listitem">
    <h2 class="pf-c-dropdown__group-title" id="{{id}}-group-3-title" aria-hidden="true">Group 3</h2>
    <ul aria-labelledby="{{id}}-group-3-title">
      <li>{{#> dropdown-menu-item dropdown-menu-item--attribute='href="#"'}}Group 3 link{{/dropdown-menu-item}}</li>
      <li>{{#> dropdown-menu-item}}Group 3 action{{/dropdown-menu-item}}</li>
    </ul>
  </section>
</div>
